<div class='page-header'>
  <h1>Our Cakes</h1>
</div>
<div class='project-info'></div>
<div class='row'>
  <% @finished_cakes.each do |cake| %>
    <div class='cake-tile col-xs-6 col-sm-4 col-md-3 no-gutters' >
      <div class='cake-title'>
        <h4><%= cake.name.try(:titleize) %></h4>
        <p><%= cake.user.try(:full_name) %></p>
        <p>
          <%= link_to "Show More >", project_path(cake), remote: true %>
        </p>
      </div>
      <%= image_tag cake.pictures.first.image.url(:medium), class: 'img-responsive' if cake.pictures.present? %>
    </div>
  <% end %>
</div>
<p class='pull-right'>
  <%= link_to "Create New Cake", new_finished_cake_path, class: 'btn btn-lg btn-primary' %>
</p>



