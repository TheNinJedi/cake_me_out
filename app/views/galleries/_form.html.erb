<%= simple_form_for(@gallery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cake_name %>
    <%= f.input :type %>
    <%= f.input :description %>
    <%= f.input :completed_at %>
    <%= f.input :servings %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
